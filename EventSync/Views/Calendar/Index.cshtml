@model List<GoogleCalendar>

<head>
    <script type="module" src="/dist/index.js"></script>
    <link rel="icon" href="/assets/Calendar.ico" type="image/x-icon">
</head>


<div class="event-list-container">
    @if (Model != null && Model.Any())
    {
        foreach (var e in Model)
        {
            <div class="event-card">
                <h2 class="event-summary">@e.Summary</h2>
                @if (!string.IsNullOrWhiteSpace(e.Description))
                {
                    <p class="event-description">@e.Description</p>
                }
                <div class="event-details">
                    @if (!string.IsNullOrWhiteSpace(e.Location))
                    {
                        <p><span class="label">Localización:</span> @e.Location</p>
                    }
                    <p><span class="label">Inicio:</span> @e.StartDate?.ToString("g")</p>
                    <p><span class="label">Fin:</span> @e.EndDate?.ToString("g")</p>
                    @if (!string.IsNullOrWhiteSpace(e.Organizer))
                    {
                        <p><span class="label">Organizador:</span> @e.Organizer</p>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="no-events">
            <h2>No se encontraron eventos en tu calendario.</h2>
        </div>
    }
</div>




<h1>Formulario</h1>
<form id="form">
<h1>Titulo:</h1>
<input  type="text" name="Summary" placeholder="Título del evento">
<h1>Descripción:</h1>
<input type="text" name="Description" placeholder="Descripción del evento">
<h1>Localicacion:</h1>
<input type="text" name="Location" placeholder="Localización del evento">
<h1>Fecha de inicio:</h1>
<input type="datetime-local" name="StartDate" placeholder="Fecha y hora de inicio">
<h1>Fecha de fin:</h1>
<input type="datetime-local" name="EndDate" placeholder="Fecha y hora de fin">
<br>
<button type="submit">c#</button>
</form>




<style>
    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background-color: black;
        color: white;
        margin: 0;
        padding: 2rem;
    }
    #submit{
        width: 100px;
     font-size: 20px;
    }

    .event-card {
        background-color: #121212;
        border: 1px solid #333;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .event-summary {
        margin-top: 0;
        color: #f5f5f5;
        border-bottom: 1px solid #444;
        padding-bottom: 0.5rem;
    }

    .label {
        color: #aaa;
        font-weight: bold;
    }
</style>