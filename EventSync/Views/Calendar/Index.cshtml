@model List<GoogleCalendar>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="module" src="/dist/index.js"></script>
    <link rel="icon" href="/assets/Calendar.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/site.css" />
    <title>EventSync</title>
</head>
<body>
    <div class="page-header">
        <h1>EventSync</h1>
    </div>

    <div class="page-container">
        <div class="event-list-container">
            <div class="event-list-header">Tus Eventos</div>
            
            @if (Model != null && Model.Any())
            {
                foreach (var e in Model)
                {
                    <div class="event-card">
                        <h2 class="event-summary">@e.Summary</h2>
                        @if (!string.IsNullOrWhiteSpace(e.Description))
                        {
                            <p class="event-description">@e.Description</p>
                        }
                        <div class="event-details">
                            @if (!string.IsNullOrWhiteSpace(e.Location))
                            {
                                <p><span class="label">Localización:</span> @e.Location</p>
                            }
                            <p><span class="label">Inicio:</span> @e.StartDate?.ToString("g")</p>
                            <p><span class="label">Fin:</span> @e.EndDate?.ToString("g")</p>
                            @if (!string.IsNullOrWhiteSpace(e.Organizer))
                            {
                                <p><span class="label">Organizador:</span> @e.Organizer</p>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-events">
                    <h2>No se encontraron eventos en tu calendario.</h2>
                </div>
            }
        </div>

        <div class="form-container">
            <h1>Crear Evento</h1>
            <form id="form">
                <div class="form-group">
                    <label for="summary">Título</label>
                    <input id="summary" type="text" name="Summary" placeholder="Nombre del evento" required>
                </div>
                <div class="form-group">
                    <label for="description">Descripción</label>
                    <input id="description" type="text" name="Description" placeholder="Detalles del evento">
                </div>
                <div class="form-group">
                    <label for="location">Localización</label>
                    <input id="location" type="text" name="Location" placeholder="Dónde será">
                </div>
                <div class="form-group">
                    <label for="start-date">Inicio</label>
                    <input id="start-date" type="datetime-local" name="StartDate" required>
                </div>
                <div class="form-group">
                    <label for="end-date">Fin</label>
                    <input id="end-date" type="datetime-local" name="EndDate" required>
                </div>
                <button type="submit">Crear Evento</button>
            </form>
        </div>
    </div>
</body>
</html>